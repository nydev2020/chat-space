.side
  .user
    .user__block
      .user__block_name
        = current_user.name
      %ul.user__block_menu
        %li
          = link_to new_group_path, class: "user__block_menu__btn" do
            = icon('fas', 'edit', class: 'icon')
            %span<>
          = link_to edit_user_path(current_user), class: "user__block_menu__btn" do
            = icon('fas', 'cog', class: 'icon')
        
  .group
    - current_user.groups.each do |group|
      .group__list
        = link_to group_messages_path(group),class: "group__list_box" do
          %p.name
            = group.name
          %p.message
            = group.show_last_message